<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.ferhatproduction.eyesoccer.Activity.ESRefereeList"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/dummy_image"
            app:civ_border_width="0dp"
            app:civ_border_color="#FF000000"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/img"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet nuisaance demo carpo"
                android:textColor="@color/gray_dark"
                android:id="@+id/tName"
                android:maxLines="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/labelProfesi"
                android:text="Profesi : "
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/item_font_size_mini"
                android:layout_below="@+id/tName" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tProfesi"
                android:text="Profesinya disini"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/item_font_size_mini"
                android:layout_below="@+id/tName"
                android:layout_toRightOf="@+id/labelProfesi"/>
        </RelativeLayout>


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/gray"/>

</LinearLayout>