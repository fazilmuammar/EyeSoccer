<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.ferhatproduction.eyesoccer.Activity.ESNewsDetail"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <ImageView
            android:id="@+id/thumbNews"
            android:scaleType="centerCrop"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:background="#ccc"
            android:src="@drawable/dummy_image" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet nuisaance demo carpo"
            android:textColor="#000"
            android:id="@+id/tTitle"
            android:layout_toRightOf="@+id/thumbNews"
            android:layout_marginLeft="10dp"
            android:maxLines="2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tTime"
            android:text="30 menit yang lalu"
            android:textColor="@color/black_overlay"
            android:textSize="@dimen/item_font_size_mini"
            android:layout_below="@+id/tTitle"
            android:layout_alignLeft="@+id/tTitle"/>

    </RelativeLayout>

</LinearLayout>